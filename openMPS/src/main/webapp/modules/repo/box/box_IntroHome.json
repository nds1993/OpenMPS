{
  "module": "BaroBox",
  "options": {
    "className": "contents_box",
    "order": [
      "cover",
      "icon_menu"
    ],
    "activation": {
      "defaultWidget": "",
      "method": "one-page"
    },
    "cover": {
      "module": "manifest!cover-0.8.1#widget",
      "options": {
        "items": [
          {
            "link": "#home",
            "bg_path": "http://resource.moven.net/themes/base/asset/bg/img_640_025.jpg",
            "caption": "삶이 행복해지는 개발자 라이프!"
          }
        ],
        "type": "simple"
      }
    },
    "icon_menu": {
      "module": "manifest!iconmenu-0.8.1#widget",
      "options": {
        "items": [
          {
            "box_id": "KakaoOnepage",
            "onclick": "switching",
            "caption": "세로 보기",
            "icon_font": "fa-coffee"
          },
          {
            "box_id": "KakaoTab",
            "onclick": "switching",
            "caption": "가로 보기",
            "icon_font": "fa-camera-retro"
          },
          {
            "box_id": "careerMenu",
            "onclick": "switching",
            "caption": "Career",
            "icon_font": "fa-pencil-square"
          },
          {
            "box_id": "contactMenu",
            "onclick": "switching",
            "caption": "Contact Me",
            "icon_font": "fa-at"
          }
        ]
      }
    }
  }
}