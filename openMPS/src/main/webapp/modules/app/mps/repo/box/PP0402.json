{
  "name": "자재 소요량 조회",
  "module": "PP0402Renderer",
  "options": {
    "className": "contents_box",
    "order": [
      "queryBox",
      "tabAreaBox"
    ],
    "activation": {
      "defaultWidget": "",
      "method": "one-page"
    },
    "queryBox": {
      "module": "FormBox",
      "options": {
        "className": "query_box form-inline",
        "order": [
          "strtDate",
          "lastDate",
          "plantCode"
        ],
        "activation": {
          "method": "one-page"
        },
        "custom_form": {
          "mode": "form",
          "name": "API Runner Form",
          "items": {
            "strtDate": {
              "module": "date",
              "selector": ".strtDate",
              "label": "조회시작일자",
              "required": false,
              "format": "YYYY-MM-DD",
              "useCurrent": true,
              "defaultDate": true
            },
            "lastDate": {
              "module": "date",
              "selector": ".lastDate",
              "label": "조회종료일자",
              "required": false,
              "format": "YYYY-MM-DD",
              "useCurrent": true,
              "defaultDate": true
            },
            "plantCode": {
              "selector": ".plantCode",
              "label": "그룹공장",
              "required": false,
              "module": "combobox",
              "fetcher": {
				  "url": "<%= host %>/rest/mpm/<%= corpCode %>/pp0101/tmplatxm?searchCondition=grup",
				"parser": "return UCMS.parseComboAll( UCMS.parseComboPlant(arguments[0]) );"

              }
            }
          },
          "data": {},
          "template": "<div class=\"form-group\"><label>조회일자</label><input type=\"text\" class=\"form-control form_type_date strtDate\"> ~ <input type=\"text\" class=\"form-control form_type_date lastDate\"></div><div class=\"form-group\"><label>그룹공장</label><div class=\"select_design plantCode\"><span class=\"select_label\"></span><select class=\"form-control\"></select></div></div>"
        }
      }
    },
    "tabAreaBox": {
      "module": "BaroBox",
      "options": {
        "className": "tabarea_box",
        "order": [
          "tab_result_1",
          "tab_result_2"
        ],
        "activation": {
          "defaultWidget": "tab_result_1",
          "method": "show-hide",
          "navigator": {
            "options": {
              "pos": "top",
              "closeButton": false,
              "label": {
                "tab_result_1": "제품별/자재별",
                "tab_result_2": "자재별"
              }
            }
          }
        },
        "tab_result_1": {
          "module": "manifest!jqGrid4-1.0.0",
          "options": {
            "className": "tab_result_edit_box grid_box",
            "gridId": "PP0402_grid_1",
            "gridParams": {
              "data": [
              ],
              "colModel": [
                {
                  "name": "proCode",
                  "label": "제품코드",
                  "width": 50,
                  "align": "center",
                  "editable": false
                },
                {
                  "name": "proName",
                  "label": "제품명",
                  "width": 100,
                  "align": "left",
                  "editable": false
                },
                {
                  "name": "mtrlCode",
                  "label": "자재코드",
                  "width": 50,
                  "align": "center",
                  "editable": false
                },
                {
                  "name": "mtrlName",
                  "label": "자재명",
                  "width": 170,
                  "align": "left",
                  "editable": false
                },
                {
                  "name": "reqMtrlQty",
                  "label": "소요량",
                  "width": 80,
                  "align": "right",
                  "sorttype":"integer","formatter":"integer",
                  "editable": false
                },
                {
                  "name": "proUnit",
                  "label": "단위",
                  "width": 40,
                  "align": "center",
                  "editable": false
                },
                {
                  "name": "reqPurQty",
                  "label": "구매요청량",
                  "width": 80,
                  "align": "right",
                  "editable": false,
                  "sorttype":"integer","formatter":"integer"
                }
              ],
			  "rowNum":"100000000",
			  "width": "auto",
			  "height": "558",
			  "cellEdit": false,
			  "shrinkToFit": true,
			  "gridview": true,
			  "datatype": "local",
			  "multiselect": false,
			  "multiselectWidth": 20,
			  "rownumbers": false,
			  "cellsubmit": "clientArray",
			  "pager": "#PP0402_grid_1_pager",
			  "viewrecords": true,
			  "recordpos":"left",
			  "pgbuttons":false,
			  "pginput":false,
			  "footerrow": false,
			  "userDataOnFooter": false
            }
          }
        },
        "tab_result_2": {
          "module": "manifest!jqGrid4-1.0.0",
          "options": {
            "className": "up_grid_box grid_box",
            "gridId": "PP0402_grid_2",
            "gridParams": {
              "data": [
              ],
              "colModel": [
                {
                  "name": "mtrlCode",
                  "label": "자재코드",
                  "width": 50,
                  "align": "center",
                  "editable": false
                },
                {
                  "name": "mtrlName",
                  "label": "자재명",
                  "width": 170,
                  "align": "left",
                  "editable": false
                },
                {
                  "name": "reqMtrlQty",
                  "label": "소요량",
                  "width": 70,
                  "align": "right",
                  "editable": false,
                  "sorttype":"integer","formatter":"integer"
                },
                {
                  "name": "proUnit",
                  "label": "단위",
                  "width": 70,
                  "align": "center",
                  "editable": false
                },
                {
                  "name": "reqPurQty",
                  "label": "구매요청량",
                  "width": 70,
                  "align": "right",
                  "editable": false,
                  "sorttype":"integer","formatter":"integer"
                }
              ],
			  "rowNum":"100000000",
			  "width": "auto",
			  "height": "558",
			  "cellEdit": false,
			  "shrinkToFit": true,
			  "gridview": true,
			  "datatype": "local",
			  "multiselect": false,
			  "multiselectWidth": 20,
			  "rownumbers": false,
			  "cellsubmit": "clientArray",
			  "pager": "#PP0402_grid_2_pager",
			  "viewrecords": true,
			  "recordpos":"left",
			  "pgbuttons":false,
			  "pginput":false,
			  "footerrow": false,
			  "userDataOnFooter": false
            }
          }
        }
      }
    }
  }
}
