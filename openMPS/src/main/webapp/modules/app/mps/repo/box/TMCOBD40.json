                            "label": "작성자",
                            "selector": ".crUserName",
                            "readonly": true
                        },
                    	"readCnt": {
                            "module": "text",
                            "label": "조회수",
                            "selector": ".readCnt",
                            "readonly": true
                        },
                    	"content": {
                            "module": "textarea",
                            "label": "내용",
                            "selector": ".content",
                            "readonly": true
                        }
                    },
                    "data": {}
                }
