							"hidden": true
						},
						{
							"name": "deleYn",
							"label": "deleYn",
							"width": 50,
							"align": "left",
							"editable": false,
							"hidden": true
						},
						{
							"name": "mdUser",
							"label": "mdUser",
							"width": 50,
							"align": "left",
							"editable": false,
							"hidden": true
						},
						{
							"name": "mdDate",
							"label": "mdDate",
							"width": 50,
							"align": "left",
							"editable": false,
							"hidden": true
						},
						{
							"name": "crUser",
							"label": "crUser",
							"width": 50,
							"align": "left",
							"editable": false,
							"hidden": true
						},
						{
							"name": "crDate",
							"label": "crDate",
							"width": 50,
							"align": "right",
							"editable": false,
							"hidden": true
						}
					],
					"rowNum":"100000000",
					"width": "auto",
					"height": "472",
					"cellEdit": false,
					"shrinkToFit": false,
					"gridview": true,
					"datatype": "local",
					"footerrow": false,
					"multiselect": false,
					"multiselectWidth": 20,
					"rownumbers": false,
					"cellsubmit": "clientArray",
					"pager": "#PP0101_grid_1_pager",
					"viewrecords": true,
					"recordpos":"left",
					"pgbuttons":false,
					"pginput":false
				}
			}
		}
	}
}
